{
  "name": "@bondzioyo/football-scoreboard",
  "version": "1.0.1",
  "description": "Simple library for managing live football matches",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.cjs"
  },
  "scripts": {
