    "scoreboard",
    "football"
  ],
  "author": "Wojciech Świątek",
  "license": "MIT",
  "packageManager": "pnpm@10.17.1",
  "devDependencies": {
    "@types/node": "^24.7.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "uuid": "^13.0.0"
  }
}
